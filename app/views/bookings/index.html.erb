

    <div class="container ">
      <div class= "white_card ">
      <h1>All my bookings </h1>
        <table class="bookings table table-striped">
          <% @bookings.each do |booking| %>
            <tbody>
              <tr class="shadow-table">
                <td ><%= link_to booking.flat.title, flat_path(booking.flat)%></td>
                <td ><%= booking.start_date%> au <%= booking.end_date %></td>
                <td><%= booking.nb_travelers%></td>
                <td><%= booking.status %></td>
                <td>  <%= link_to booking_path(booking),
                      method: :delete,
                      data: { confirm: "Are you sure?" } do %>
                    <i class="fa fa-trash-o"></i>
                  <% end %>
              </td>
              <% end %>
              </tr>
          </tbody>
        </table>
     </div>
  </div>
  <br>
    <div class="container">
     <div class= "white_card">
      <h1>All the bookings on my flats  </h1>
        <table class="bookings table">
          <% @bookings.each do |booking| %>
            <tbody>
              <tr class="shadow-table">
                <td ><%= link_to booking.flat.title, flat_path(booking.flat)%></td>
                <td ><%= booking.start_date%> au <%= booking.end_date %></td>
                <td><%= booking.nb_travelers%></td>
                <td><%= booking.status %></td>
                <td>
                <%= link_to booking_path(booking, accept: true), method: :put do %>
                  <i class="fa fa-check"></i> Accept
                <% end %>
-
                <%= link_to booking_path(booking, accept: false), method: :put do %>
                  <i class="fa fa-times"></i> Refuse
                <% end %>
                </td>

              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>










