
<div class="index_booking"><div class="padded">
  <h1 class="text-center">List of your bookings</h1>
    <ul class ="list">
      <% @bookings.each do |booking| %>
        <li>
          <p><%= booking.flat.title %></p>
            <%= link_to booking_path(booking),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash-o"></i> Delete this booking
          <% end %>

        </li>
      <% end %>
    </ul>
</div>

