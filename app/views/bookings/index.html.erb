    <div class="container">
     <div class= "white_card">
      <h1>All the bookings on my flats  </h1>
        <table class="bookings table">
          <% @bookings.each do |booking| %>
            <tbody>
              <tr class="shadow-table">
                <td ><%= link_to booking.flat.title, flat_path(booking.flat)%></td>
                <td ><%= booking.start_date%> au <%= booking.end_date %></td>
                <td><%= booking.nb_travelers%></td>
                <td><%= booking.status %></td>
                <td>  <%= button_to "Accept", { action: "update", id: booking.id }, method:   :put, params: { accept: true } %>
                      <%= button_to "Refuse", { action: "update", id: booking.id }, method: :put, params: { accept: false } %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>










